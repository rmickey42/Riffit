
<main>
    <h1>Create a Post</h1>
    <form action="/posts/new" method="post" id="post-create-form" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        
        <label for="notation">Notation:</label>
        <input type="text" id="notation" name="notation" required>
        
        <label for="key">Key:</label>
        <input type="text" id="key" name="key" required>
        
        <label for="instrument">Instrument:</label>
        <input type="text" id="instrument" name="instrument" required>
        
        <label for="tags">Tags (comma separated):</label>
        <input type="text" id="tags" name="tags" required>
        
        <label for="audio">Upload Audio File:</label>
        <input type="file" id="audio" name="audio" accept="audio/mpeg" required>
        
        <button type="submit">Create Post</button>
    </form>  </form>

    <div class="error-message"></div>

    
    {{#if error}}
    
    <p class="error">{{error}}</p>  
    
    {{/if}}

    <a href="/login"><p>Already have an account? Click here to sign in</p></a>
</main>

