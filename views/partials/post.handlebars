<h3>{{post.title}}</h3>
<audio controls>
    <source src="{{post.content}}" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>
<p>{{post.notation}}</p>
<p>Tags: {{post.tags}}</p>
<p>Created by: <a href="/users/{{post.userId}}">{{post.username}}</a></p>
<p>Created on: {{post.date}}</p>

{{#if post.key}}<p>Key: {{post.key}}</p>{{/if}}
{{#if post.instrument}}<p>Instrument: {{post.instrument}}</p>{{/if}}

{{#if user}}
    <a href="/posts/{{post.id}}/edit">Edit</a>
    <form action="/posts/{{post.id}}?_method=DELETE" method="POST">
        <label for="delete_button">Delete</label>
        <input type="submit" name="delete_button" id="delete_button">
    </form>
{{/if}}
