<main>
  <p>Search</p>
  <form action="/search" id="search-form" method="POST" class="new-post-search">
    <input type="submit" id="search-button" value="Search">

    <label for="tag-input-1">Tag 1:</label>
    <input type="text" name="tag-input-1" placeholder="Tag" id="tag-input-1">

    <button id="add-tag-button" type="button">Add Tag</button>
    <button id="remove-tag-button" type="button">Remove Tag</button>

    <input type="number" name="tagCount" id="tagCount" value="1" hidden>
  </form>

   

  {{#if error}}
  
    <p><strong>Error: </strong>{{error}}</p>
 
  {{/if}}

  {{#if posts}}
  <ul>
    {{#each posts}}
    <li class = "post-item">
      {{> post post=this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</main>